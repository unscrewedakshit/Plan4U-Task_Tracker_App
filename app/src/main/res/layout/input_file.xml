<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_design"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:textSize="22sp"
        android:textColor="#ffff"
        android:gravity="center"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">

            <EditText
                android:id="@+id/task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter task to be added"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_margin="10dp"/>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Alarm(optional)"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <Button
                android:id="@+id/pickTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Pick time"
                android:padding="5dp"
                android:textColor="#ffff"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_baseline_access_alarm_24"
                android:drawableLeft="@drawable/ic_baseline_access_alarm_24" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/holderView"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="2">
            <Button
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:id="@+id/cancelButton"
                android:textAllCaps="false"
                android:text="Cancel"
                android:padding="5dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#0f4c75"
                android:background="@drawable/rounded_card"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <Button
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:id="@+id/saveButton"
                android:textAllCaps="false"
                android:text="Add"
                android:padding="5dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_card"
                android:backgroundTint="#0f4c75"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>