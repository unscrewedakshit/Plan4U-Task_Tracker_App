<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_design"
    tools:context=".RegistrationActivity">

    <!--<androidx.appcompat.widget.Toolbar
        android:id="@+id/RegistrationToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/todoicon"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        />


    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Account"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/RegistrationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:inputType="textEmailAddress"
        android:textColorHint="#fff"
        android:drawableStart="@drawable/ic_baseline_assignment_ind_24"
        android:drawablePadding="12dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_email_24" />

    <EditText
        android:id="@+id/RegistrationEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:inputType="textEmailAddress"
        android:textColorHint="#fff"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="12dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_email_24" />

    <EditText
        android:id="@+id/RegistrationPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="12dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24" />

    <EditText
        android:id="@+id/RegistrationConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="12dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24" />

    <Button
        android:id="@+id/RegistrationButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:background="@drawable/rounded_card"
        android:backgroundTint="#0f4c75"/>

    <TextView
        android:id="@+id/RegistrationPageQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account ? Login"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>